{
	"name": "express-boilerplate",
	"version": "1.0.0",
	"description": "Express boilerplate",
	"main": "src/App.js",
	"scripts": {
		"build": "babel ./src --out-dir ./build && npm run build:swagger:production",
		"build:swagger:production": "swagger-cli bundle ./src/Swagger/Swagger.json --outfile ./build/Swagger.json --type json",
		"build:swagger": "swagger-cli bundle ./src/Swagger/Swagger.json --outfile ./src/Swagger.json --type json",
		"clean": "rimraf ./build",
		"clean:logs": "rimraf ./Logs",
		"start": "cross-env NODE_ENV=production node ./build/App.js",
		"dev": "cross-env NODE_ENV=development nodemon --exec npx babel-node src/app.js",
		"lint:check": "eslint src/**/*.{js,json}",
		"lint:fix": "eslint --fix src/**/*.{js,json}",
		"prettier:fix": "prettier -w \"src/**/*.{js,json}\"",
		"prettier:check": "prettier -c \"src/**/*.{js,json}\"",
		"prepare": "npm run build:swagger",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:watch:all": "jest --watchAll",
		"test:changed": "jest -o"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kennarddh/express-boilerplate"
	},
	"keywords": [
		"nodejs",
		"boilerplate",
		"babel",
		"jwt",
		"express",
		"mongodb",
		"eslint",
		"bcrypt",
		"jsonwebtoken"
	],
	"author": "kennarddh",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.0.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^6.4.0",
		"express-validator": "^6.14.2",
		"helmet": "^5.0.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.4.2",
		"swagger-ui-express": "^4.4.0",
		"winston": "^3.8.1",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.18.6",
		"@babel/core": "^7.18.6",
		"@babel/node": "^7.18.6",
		"@babel/plugin-transform-runtime": "^7.18.6",
		"@babel/preset-env": "^7.18.6",
		"@babel/runtime": "^7.18.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.19.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^26.5.3",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-security": "^1.5.0",
		"jest": "^28.1.2",
		"mockingoose": "^2.15.2",
		"nodemon": "^2.0.18",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"supertest": "^6.2.4",
		"swagger-cli": "^4.0.4"
	}
}
